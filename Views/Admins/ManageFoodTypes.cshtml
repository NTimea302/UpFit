@model IEnumerable<UpFit__main.Models.FoodType>
@{
    ViewBag.Title = "ManageFoodTypes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Food Types</h2>

@Html.ActionLink("Back", "Index", "Admins", new { area = "" }, new { @class = "btn btn-primary btn-custom" })

@Html.ActionLink("Create New", "CreateFoodTypes", new { area = "" }, new { @class = "btn btn-primary btn-custom" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditFoodTypes", new { id = item.ID_Type }) |
                @Html.ActionLink("Delete", "DeleteFoodTypes", new { id = item.ID_Type })
            </td>
        </tr>
    }

</table>
