<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UpFit!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 text-center">
                        <p>&copy; @DateTime.Now.Year - UpFit</p>
                    </div>
                    <div class="col-sm-4 text-center">
                        <img src="~/Content/logo2.png" alt="Logo 2" width="30" height="30"> It's you now vs. who you want to be
                    </div>
                    <div class="col-sm-4 text-center">
                        <img src="~/Content/logo3.png" alt="Logo 3" width="30" height="30"> Start now
                    </div>
                </div>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
